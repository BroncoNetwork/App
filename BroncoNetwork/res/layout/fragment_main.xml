<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs356.bronconetwork.MainActivity$PlaceholderFragment" 
    android:background="@drawable/bg">

    <EditText
        android:id="@+id/pw1"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        android:background="#99999999"
        android:ems="10"
        android:inputType="textPersonName" 
        android:minHeight="30dp"
        android:hint="Username">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/username"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pw1"
        android:layout_below="@+id/pw1"
        android:layout_marginTop="31dp"
        android:background="#99999999"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="35dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="Welcome to BroncoNetwork"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/regSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Log In" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:onClick="forgetPass"
        android:clickable="true"
        android:text="Forget your password???"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/button2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:text="Sign Up for BroncoNetwork"
        android:onClick="register" />

</RelativeLayout>
