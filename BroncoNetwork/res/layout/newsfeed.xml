<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E4F2E4"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/newsfeed_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#005c27"
        android:minHeight="35dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/text_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@drawable/post_text_edit"
            android:ems="10"
            android:minHeight="35dp" >
        </EditText>

        <Button
            android:id="@+id/post_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="3dp"
            android:layout_weight="3"
            android:background="@drawable/rect_button"
            android:minHeight="35dip"
            android:text="Post"
            android:textColor="#FFFFFFFF" />

    </LinearLayout>
    
    <ScrollView
        android:id="@+id/newsfeed_list"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/newsfeed_header"
        android:layout_weight="1" >
		<LinearLayout
		    android:orientation="vertical"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" >
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:text="BLAHHHHHHHHHHHHHHHHHHHHHHHHHHHHHHHHHHHHHHHHHH"
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:textSize="100sp" />
	
	        <Button
	            android:id="@+id/logout"
	            style="?android:attr/buttonStyleSmall"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_centerHorizontal="true"
	            android:background="@drawable/rect_button"
	            android:minHeight="35dip"
	            android:onClick="log_out"
	            android:text="Logout"
	            android:textColor="#FFFFFFFF" />

		</LinearLayout>
    </ScrollView>

</LinearLayout>