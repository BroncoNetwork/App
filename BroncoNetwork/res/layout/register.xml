<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/scroll" 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="19dp"
        android:text="*username(6-20 characters long)"
        android:textColor="#9e9e9e" />

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pw"
        android:layout_alignRight="@+id/pw"
        android:layout_below="@+id/textView2"
        android:background="?android:attr/editTextBackground"
        android:ems="@integer/register_field_length" >

    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username"
        android:layout_below="@+id/username"
        android:text="*password(6-20 characters long)"
        android:textColor="#9e9e9e" />

    <EditText
        android:id="@+id/pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/editTextBackground"
        android:ems="@integer/register_field_length"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/pw2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pw"
        android:layout_below="@+id/pw"
        android:background="?android:attr/editTextBackground"
        android:ems="@integer/register_field_length"
        android:hint="re-enter password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pw2"
        android:layout_below="@+id/pw2"
        android:text="*email"
        android:textColor="#9e9e9e" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignRight="@+id/pw2"
        android:layout_below="@+id/textView4"
        android:background="?android:attr/editTextBackground"
        android:ems="@integer/register_field_length"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/regSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/rect_button"
        android:minHeight="35dp"
        android:minWidth="128dp"
        android:onClick="submit"
        android:text="submit"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:text="Register"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#9e9e9e"
        android:textSize="40sp" />


</RelativeLayout>
</ScrollView>